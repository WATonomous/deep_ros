{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup Devcontainer",
      "type": "shell",
      "command": "./.devcontainer/gen_env.sh ${input:rosDistro}",
      "problemMatcher": [],
      "group": "build"
    }
  ],
  "inputs": [
    {
      "id": "rosDistro",
      "type": "pickString",
      "description": "Select ROS2 distribution",
      "options": [
        "humble",
        "iron",
        "jazzy",
        "rolling"
      ],
      "default": "humble"
    }
  ]
}
